<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="350.0" prefWidth="400.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="upeu.edu.pe.InicioSesionController">

    <children>

        <!-- Caja con el formulario (semi-transparente) -->
        <VBox alignment="CENTER" spacing="10" styleClass="form-box">

            <!-- Título -->
            <Label style="-fx-font-size: 22px;" text="Iniciar Sesión" />

            <!-- Usuario -->
            <Label styleClass="label-small" text="Ingrese su usuario" />
            <TextField fx:id="txtUsuario" promptText="Usuario" />

            <!-- Contraseña -->
            <Label styleClass="label-small" text="Ingrese su contraseña" />
            <PasswordField fx:id="txtPassword" promptText="Contraseña" />

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="15">
                <children>
                    <!-- Botón Volver -->
                    <Button text="Volver">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                <image>
                                    <Image url="@icono3.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>

                    <!-- Botón Inicia Sesión (sin acción por ahora) -->
                    <Button fx:id="btnLogin" text="Inicia Sesión">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                <image>
                                    <Image url="@icono2.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </children>
            </HBox>

            <!-- Botón tipo enlace debajo -->
            <Button onAction="#irARegistro" styleClass="link-button" text="¿Sin cuenta? Registrarse" />
        </VBox>
    </children>
</StackPane>
